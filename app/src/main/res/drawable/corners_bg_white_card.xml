<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Stroke luar -->
    <item>
        <shape 
			android:shape="rectangle">
            <solid 
				android:color="@color/me_divider" /> <!-- warna stroke luar -->
            <corners 
				android:radius="7dp" />
        </shape>
    </item>

    <!-- Stroke dalam -->
    <item 
		android:left="1dp" 
		android:top="1dp" 
		android:right="1dp" 
		android:bottom="1dp">
        <shape 
			android:shape="rectangle">
            <solid 
				android:color="#F9F8F9" /> <!-- warna stroke dalam -->
            <corners 
				android:radius="7dp" />
        </shape>
    </item>

    <!-- Isi -->
    <item
		android:left="1dp" 
		android:top="1dp" 
		android:right="1dp" 
		android:bottom="1dp">
        <shape 
			android:shape="rectangle">
            <solid 
				android:color="@color/me_background_front" /> <!-- isi/background -->
            <corners 
				android:radius="7dp" />
        </shape>
    </item>

</layer-list>