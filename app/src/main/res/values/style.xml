<resources>

    <style name="ToolbarTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="navigationIconTint">@color/me_color_icon</item>
        <item name="titleTextColor">@color/me_toolbar_title</item>
        <item name="titleTextAppearance">@style/ToolbarTitleText</item>
    </style>

    <style name="ToolbarTitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BottomNavigationIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="shapeAppearance">@style/BottomNavigationShapeAppearance</item>
        <item name="android:width">56dp</item>
        <item name="android:height">30dp</item>
        <item name="android:color">@color/me_background_back</item>
    </style>

    <style name="BottomNavigationShapeAppearance" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">7dp</item>
    </style>

    <style name="BottomNavigationOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeTopRight">15dp</item>
    </style>

    <style name="MyDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="PopupDialogTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="FullscreenBottomSheetDialogFragment" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Catalog.BottomSheet.Modal.Scrollable</item>
    </style>

    <style name="Widget.Catalog.BottomSheet.Modal.Scrollable" parent="Widget.Material3.BottomSheet.Modal">
        <item name="paddingBottomSystemWindowInsets">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <!-- <item name="android:windowIsFloating">false</item> -->
    </style>

    <style name="KeyboardStyle" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheetStyle</item>
    </style>

    <style name="TransparentBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12.5sp</item> <!-- Ubah ukuran teks di sini -->
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TabTextKapitalSmall" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item> <!-- Ubah ukuran teks di sini -->
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TabTextHistory" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12.5sp</item> <!-- Ubah ukuran teks di sini -->
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/me_primary</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="CardViewStyle">
        <item name="cardBackgroundColor">@color/me_background_front</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="strokeWidth">0.9dp</item>
        <item name="strokeColor">@color/me_divider</item>
        <item name="cardElevation">0dp</item>
        <item name="android:outlineAmbientShadowColor">@color/me_primary</item>
        <item name="android:outlineSpotShadowColor">@color/me_primary</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="KeyButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="backgroundTint">@color/me_background_front</item>
        <item name="cornerRadius">7dp</item>
        <item name="rippleColor">#22000000</item>
        <item name="android:textColor">@color/me_toolbar_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="KeyButtonCustom" parent="Widget.Material3.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="backgroundTint">@color/me_background_keyboard_btn</item>
        <item name="cornerRadius">7dp</item>
        <item name="rippleColor">#330096FA</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/me_toolbar_title</item>
    </style>

    <style name="TooltipDefaultStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomHintTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">25sp</item> <!-- Ukuran hint -->
        <item name="android:textColor">#FF888888</item> <!-- Warna opsional -->
    </style>

    <style name="CustomHintTextStyle2" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item> <!-- Ukuran hint -->
        <item name="android:textColor">@android:color/darker_gray</item> <!-- Warna opsional -->
    </style>

    <style name="StyleInputLayout">
        <item name="boxStrokeColor">@color/input_layout_selector</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/me_background_input</item>
        <item name="expandedHintEnabled">false</item>
        <item name="placeholderTextColor">@color/me_color_text_light</item>
    </style>

    <style name="ThemeInputOutline">
        <item name="expandedHintEnabled">false</item>
        <item name="placeholderTextColor">@color/me_color_text_light</item>
        <item name="boxStrokeColor">@color/input_layout_selector</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="RoundedImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">7dp</item> <!-- atau 100% untuk lingkaran -->
    </style>

    <style name="Theme.Custom" parent="@android:style/Theme">
        <item name="default_style">@style/default_swipe_button_style</item>
    </style>

    <style name="default_swipe_button_style" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="inner_text">Swipe</item>
        <item name="inner_text_color">@color/black</item>
        <item name="inner_text_size">12sp</item>
        <item name="inner_text_gravity">center</item>
        <item name="outer_background_drawable">@drawable/swipe_rounded_gray_corners</item>
        <item name="outer_background_height">40dp</item>
        <item name="button_background_drawable">@drawable/swipe_button_background</item>
        <item name="button_background_padding">16dp</item>
        <item name="button_background_src">@drawable/chevron_down</item>
        <item name="button_width">56dp</item>
        <item name="button_height">56dp</item>
        <item name="trail_enabled">true</item>
        <item name="trail_background_tint">@color/gray</item>
        <item name="has_finish_animation">true</item>
        <item name="has_active_status">true</item>
    </style>

    <style name="CountdownText">
        <item name="android:background">@drawable/shape_countdown_bg</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>