<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center|center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/bantuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="18dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:drawableLeft="@drawable/ic_tanda_tanya"
        android:drawablePadding="10dp"
        android:drawableTint="@color/me_color_text_light"
        android:text="Bantuan"
        android:textColor="@color/me_blue"
        android:textSize="16sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom|center_vertical|center|center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="0dp" >

        <com.mhr.mobile.widget.imageview.RoundedImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="14dp"
            android:background="@mipmap/ic_launcher"
            app:radius="25dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:gravity="center_horizontal"
            android:text="BUAT PIN"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.poovam.pinedittextfield.SquarePinField
            android:id="@+id/etPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:autofillHints="none"
            android:inputType="numberPassword"
            android:textSelectHandle="@drawable/text_handle"
            app:cornerRadius="8dp"
            app:fieldColor="@color/me_color_text_light"
            app:highlightColor="@color/me_blue"
            app:highlightType="completedFields"
            app:isCursorEnabled="false"
            app:noOfFields="6" />

        <TextView
            android:id="@+id/strInputPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:text="Masukan PIN kamu"
            android:textColor="@color/me_color_text_light"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/keyboard"
            android:layout_gravity="bottom|center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/btnGantiAkun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_horizontal"
                android:padding="14dp"
                android:text="Ganti Akun"
                android:textColor="@color/me_blue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/btnLupaPin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_horizontal"
                android:padding="14dp"
                android:text="Lupa PIN?"
                android:textColor="@color/me_blue"
                android:textSize="14sp" />
        </LinearLayout>

        <com.mhr.mobile.widget.input.KeyboardNumber
            android:id="@+id/keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>