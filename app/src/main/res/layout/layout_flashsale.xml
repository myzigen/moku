<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardViewStyle"
    android:layout_width="match_parent"
	android:id="@+id/root"
	android:visibility="gone"
    android:layout_height="wrap_content"
    android:layout_margin="8dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
			android:paddingLeft="14dp"
			android:paddingTop="14dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="F"
                android:textColor="@color/me_blue"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_flashsale"
                android:tint="@color/me_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="ASHSALE "
                android:textColor="@color/me_blue"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="14dp"
                android:text=" Berakhir dalam"
                android:textColor="@color/me_color_text_light" />

            <TextView
				android:textStyle="bold"
                android:id="@+id/tvHour"
                style="@style/CountdownText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:text=":"
                android:textColor="#ff000000"
                android:textSize="16sp" />

            <TextView
				android:textStyle="bold"
                android:id="@+id/tvMinute"
                style="@style/CountdownText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:text=":"
                android:textColor="#ff000000"
                android:textSize="16sp" />

            <TextView
				android:textStyle="bold"
                android:id="@+id/tvSecond"
                style="@style/CountdownText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp" />
        </LinearLayout>

        <com.mikelau.shimmerrecyclerviewx.ShimmerRecyclerViewX
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
			android:paddingHorizontal="11dp"
			android:clipToPadding="false"
            android:layout_height="wrap_content" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>