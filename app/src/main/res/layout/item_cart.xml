<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corners_bg_white"
    android:orientation="vertical"
    android:padding="14dp" >

    <android.widget.CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="14dp" />

    <com.mhr.mobile.widget.imageview.RoundedImageView
        android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="14dp"
        android:layout_toEndOf="@id/checkbox"
        app:radius="7dp" />

    <TextView
        android:id="@+id/infoProduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image"
        android:text="Nama Produk"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/infoNomor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image"
        android:layout_toEndOf="@id/image"
        android:text="083168612666"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/infoPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image"
        android:layout_alignParentEnd="true"
        android:text="Harga Produk"
        android:textColor="@color/me_blue"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Hapus"
        android:textColor="@color/status_canceled"
        android:textStyle="bold" />

</RelativeLayout>