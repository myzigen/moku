<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
	android:padding="14dp"
    android:layout_height="wrap_content"
	android:clickable="true"
	android:foreground="?attr/selectableItemBackground"
    android:background="@color/me_background_front"
    android:orientation="horizontal" >

    <FrameLayout
        android:id="@+id/image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/corners_bg_primary" >

        <TextView
            android:id="@+id/initial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center|center_horizontal"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </FrameLayout>

    <TextView
        android:id="@+id/infoNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:textStyle="bold"
        android:layout_toEndOf="@id/image"
        android:text="Nama" />

    <TextView
        android:id="@+id/infoNomor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@@id/image"
        android:layout_toEndOf="@id/image"
        android:text="Nama"
        android:textColor="@color/me_color_text_light"
        android:textSize="12sp" />

</RelativeLayout>