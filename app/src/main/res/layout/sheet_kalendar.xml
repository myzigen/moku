<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.mhr.mobile.widget.recyclerview.WidgetKalendar
        android:id="@+id/kalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
		android:layout_marginTop="8dp"
        android:background="@color/me_divider" />

    <com.google.android.material.button.MaterialButton
		android:id="@+id/btnTerapkanReminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|right|end"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="18dp"
		android:layout_marginRight="18dp"
        android:layout_marginTop="5dp"
        android:padding="16dp"
        android:text="Terapkan"
        android:textColor="@color/me_color_text"
        app:backgroundTint="@color/btn_enabled_selector"
        app:cornerRadius="7dp" />

</LinearLayout>