<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/me_background"
    android:orientation="vertical"
    android:padding="18dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:background="@drawable/corners_bg_white"
        android:orientation="vertical"
        android:padding="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.mhr.mobile.widget.imageview.RoundedImageView
                android:id="@+id/logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="14dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="4dp"
                app:radius="8dp" />

            <TextView
                android:id="@+id/titleNoPelanggan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/logo"
                android:text="No.Pelanggan" />

            <TextView
                android:id="@+id/infoNoPelanggan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/logo"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/logo"
                android:text="011122223"
                android:textSize="16sp" />

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/logo"
                android:layout_marginBottom="14dp"
                android:background="@color/me_divider" />

            <TextView
                android:id="@+id/titleNamaPelanggan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider1"
                android:text="Nama Pelanggan"
                android:textColor="@color/me_color_text_light" />

            <TextView
                android:id="@+id/infoNamaPelanggan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/divider1"
                android:layout_marginBottom="14dp"
                android:text="John Doe" />

            <TextView
                android:id="@+id/titlePeriode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/infoNamaPelanggan"
                android:layout_marginBottom="14dp"
                android:text="Periode"
                android:textColor="@color/me_color_text_light" />

            <TextView
                android:id="@+id/infoPeriode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/infoNamaPelanggan"
                android:text="26/2025" />

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titlePeriode"
                android:text="Tarif Daya"
                android:textColor="@color/me_color_text_light" />

            <TextView
                android:id="@+id/infoTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/titlePeriode"
                android:text="Tarif" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_bg_white"
        android:orientation="vertical"
        android:padding="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/titleSellingPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="4dp"
                android:text="Total Tagihan"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/infoSellingPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/titleSellingPrice"
                android:text="25000"
                android:textColor="@color/me_blue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/titleSellingPrice"
                android:layout_marginBottom="14dp"
                android:background="@drawable/border_line_dashed" />

            <TextView
                android:id="@+id/titlePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider2"
                android:layout_marginBottom="14dp"
                android:text="Tagihan"
                android:textColor="@color/me_color_text_light" />

            <TextView
                android:id="@+id/infoPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/divider2"
                android:text="25000" />

            <TextView
                android:id="@+id/titleAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titlePrice"
				android:textColor="@color/me_color_text_light"
                android:layout_marginBottom="14dp"
                android:text="Biaya Admin" />

            <TextView
                android:id="@+id/infoAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/titlePrice"
                android:text="Tagihan" />

            <TextView
				android:textColor="@color/me_color_text_light"
                android:id="@+id/titleDenda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleAdmin"
                android:text="Denda" />

            <TextView
                android:id="@+id/infoDenda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/titleAdmin"
                android:text="Text" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom|center_vertical"
        android:orientation="vertical" >

        <com.mhr.mobile.widget.button.SwipeButton
            android:id="@+id/btnBayar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            app:button_background_drawable="@drawable/swipe_button_rect_bg"
            app:button_background_padding="14dp"
            app:button_background_src="@drawable/chevron_right_small"
            app:button_background_tint="@color/white"
            app:button_height="55dp"
            app:button_width="55dp"
            app:has_active_status="false"
            app:has_finish_animation="false"
            app:inner_text="Geser Untuk Bayar"
            app:inner_text_color="@color/white"
            app:inner_text_gravity="center"
            app:inner_text_padding="8dp"
            app:inner_text_size="16sp"
            app:outer_background_drawable="@drawable/swipe_rounded_rect_bg"
            app:outer_background_height="55dp"
            app:outer_background_tint="@color/white"
            app:trail_background_tint="@color/transparent"
            app:trail_enabled="true" />
    </LinearLayout>

</LinearLayout>