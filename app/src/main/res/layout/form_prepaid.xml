<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootGroup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionGroup="true" >

    <LinearLayout
        android:id="@+id/infoNoProduk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="18dp"
        android:visibility="gone" >

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/no_data" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical|center|center_horizontal"
            android:text="Daftar Produk Akan Muncul Setelah Kamu menginputkan nomor Hp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/backdrop"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/backdrop_wave"
        android:tint="@color/me_toolbar_front" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/backdrop_plus"
        android:tint="@color/me_background_back" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:liftOnScroll="false"
        app:liftOnScrollColor="@color/transparent" >

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollEffect="compress"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            android:background="@color/transparent" >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/logoProvider"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="18dp"
                android:background="@color/white"
                android:src="@drawable/ic_chip"
                app:shapeAppearanceOverlay="@style/RoundedImage" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/logoProvider"
                android:layout_marginLeft="33dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/wrap_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/backdrop"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            app:layout_scrollFlags="enterAlways" >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayout"
                style="@style/StyleInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxCornerRadiusTopEnd="7dp"
                app:boxCornerRadiusTopStart="7dp"
                app:endIconMode="custom" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="phone|textNoSuggestions"
                    android:maxLength="12"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:cursorColor="@color/me_blue" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/endIconContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/inputLayout"
                android:layout_centerVertical="true"
                android:layout_marginEnd="0dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/clear_text"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Clear Text"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_numped_delete"
                    android:visibility="gone"
                    app:tint="@color/me_color_icon" />

                <Button
                    android:id="@+id/btnPickContact"
                    style="?attr/materialIconButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Pick Contact"
                    app:icon="@drawable/pick_contact"
                    app:iconPadding="0dp"
                    app:iconSize="24dp"
                    app:iconTint="@color/me_color_icon" />
            </LinearLayout>
        </RelativeLayout>

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expandable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wrap_input"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/shape_corners_bottom_error"
            app:el_duration="300"
            app:el_expanded="false"
            app:el_parallax="0.5" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center|center_horizontal"
                android:orientation="horizontal" >

                <ProgressBar
                    android:id="@+id/progressExpand"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:indeterminateTint="@color/black"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtPesanKePengguna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </net.cachapa.expandablelayout.ExpandableLayout>

        <ListView
            android:id="@+id/listKontak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="@color/me_background_front"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="14dp" >

            <LinearLayout
                android:id="@+id/btnNamaPaket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/corners_bg_gray"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/namaPaket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Nama Paket"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/toggleNamaPaket"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/chevron_down"
                    app:tint="@color/me_color_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnKuota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/corners_bg_gray"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/namaKuota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kuota"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/toggleKuota"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/chevron_down"
                    android:tint="@color/me_color_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnMasaAktif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/corners_bg_gray"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/namaMasaAktif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Masa Berlaku"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/toggleMasaAktif"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/chevron_down"
                    android:tint="@color/me_color_icon" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Konten scrollable -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" >

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <!-- Konten panjang -->

                <com.mikelau.shimmerrecyclerviewx.ShimmerRecyclerViewX
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:paddingBottom="80dp"
                    app:shimmer_demo_angle="45"
                    app:shimmer_demo_duration="700"
                    app:shimmer_demo_grid_child_count="2"
                    app:shimmer_demo_shimmer_color="@color/me_background_back" />

                <TextView
                    android:id="@+id/jumlahProduk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="25dp"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

        <View
            android:id="@+id/layer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D2000000"
            android:clickable="true"
            android:elevation="5dp"
            android:visibility="gone" />

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expandFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/me_toolbar_back"
            android:clickable="true"
            android:elevation="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerFilter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingTop="10dp" >

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnReset"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Reset"
                        app:cornerRadius="5dp" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="0dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTerapkan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Terapkan"
                        app:cornerRadius="5dp" />
                </LinearLayout>
            </LinearLayout>
        </net.cachapa.expandablelayout.ExpandableLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/wrapperPembayaran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_anchorGravity="bottom"
        android:elevation="10dp"
        android:visibility="gone" >

        <include
            android:id="@+id/pembayaran"
            layout="@layout/bottom_action_pay" />
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>