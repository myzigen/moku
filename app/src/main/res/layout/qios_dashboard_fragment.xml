<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/qios_dashboard_bg"
        android:orientation="horizontal"
        android:paddingBottom="18dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="18dp" >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:outlineAmbientShadowColor="@color/me_background_front"
            android:outlineSpotShadowColor="@color/me_background_front"
            android:shadowColor="#512da8"
            android:shadowDx="5"
            android:shadowDy="5"
            app:cardBackgroundColor="@color/me_primary"
            app:cardCornerRadius="7dp"
            app:cardElevation="10dp"
            app:elevation="10dp"
            app:strokeWidth="0dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:rotation="-10"
                    android:src="@drawable/dompet_qiospro"
                    app:tint="#1E1E23" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/titleSaldo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:text="Saldo Moku"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvSaldo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titleSaldo"
                        android:layout_marginLeft="12dp"
                        android:text="Rp"
                        android:textColor="#ffffff"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imgHideSaldo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/eye_on" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal"
                        android:paddingBottom="12dp" >

                        <LinearLayout
                            android:id="@+id/tf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/imgSend"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:layout_marginBottom="4dp"
                                android:src="@drawable/ic_send_saldo"
                                android:tint="#fafafa" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Transfer"
                                android:textColor="#ffffff"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/topup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/imgTopup"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:layout_marginBottom="4dp"
                                android:src="@drawable/ic_topup_v1"
                                android:tint="#ffffff" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Isi Saldo"
                                android:textColor="#ffffff"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="8dp"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:outlineAmbientShadowColor="@color/me_background_front"
                android:outlineSpotShadowColor="@color/me_background_front"
                android:shadowColor="#512da8"
                android:shadowDx="5"
                android:shadowDy="5"
                app:cardBackgroundColor="@color/me_primary"
                app:cardCornerRadius="7dp"
                app:cardElevation="10dp"
                app:elevation="10dp"
                app:strokeWidth="0dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp" >

                    <TextView
                        android:id="@+id/titleKomisi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Poin"
                        android:textColor="#ffffff"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvKomisi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titleKomisi"
                        android:text="13053"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignBottom="@id/tvKomisi"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/chevron_right_small"
                        app:tint="#ffffff" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="0dp"
                android:layout_height="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:outlineAmbientShadowColor="@color/me_background_front"
                android:outlineSpotShadowColor="@color/me_background_front"
                android:shadowColor="#512da8"
                android:shadowDx="5"
                android:shadowDy="5"
                app:cardBackgroundColor="@color/me_primary"
                app:cardCornerRadius="7dp"
                app:cardElevation="10dp"
                app:elevation="10dp"
                app:strokeWidth="0dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp" >

                    <TextView
                        android:id="@+id/titlePromo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Level"
                        android:textColor="#ffffff"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvPromo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titlePromo"
                        android:text="Starter"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignBottom="@id/tvPromo"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/chevron_right_small"
                        app:tint="#ffffff" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/infoStartCutOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center|center_horizontal"
        android:layout_marginHorizontal="18dp"
        android:layout_marginVertical="10dp"
        android:background="#FFF8E4"
        android:drawableLeft="@drawable/ic_speaker"
        android:drawablePadding="8dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:padding="4dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@color/color_pending_front"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/qios_kategori_bg"
        android:paddingBottom="18dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:visibility="gone" >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/me_primary"
            app:cardCornerRadius="7dp"
            app:strokeWidth="0dp" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <com.mikelau.shimmerrecyclerviewx.ShimmerRecyclerViewX
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never" />
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>

</LinearLayout>