<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/me_background" >

    <include 
		android:id="@+id/incError"
		android:layout_centerInParent="true"
		layout="@layout/error_layout" />

    <com.mikelau.shimmerrecyclerviewx.ShimmerRecyclerViewX
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnAddPelanggan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="18dp"
		android:text="Tambah Pelanggan"
		android:textColor="@color/white"
        app:icon="@drawable/nav_pelanggan_outline"
        app:backgroundTint="@color/me_primary"
        app:iconTint="#ffffff" />

</RelativeLayout>