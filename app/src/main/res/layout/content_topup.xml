<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/atm"
        android:tint="@color/me_color_icon" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/img"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nomor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_toEndOf="@id/img"
        android:text="083168612666"
        android:textSize="13sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input"
        style="@style/StyleInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        app:boxBackgroundColor="@color/me_background_front"
        app:placeholderText="0"
        app:placeholderTextAppearance="@style/CustomHintTextStyle"
        app:prefixText="Rp"
        app:prefixTextAppearance="@style/CustomHintTextStyle" >

        <com.mhr.mobile.widget.input.RupiahEditText
            android:id="@+id/editext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="25sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <include
        android:id="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        layout="@layout/expandable_check_user" />

    <TextView
        android:id="@+id/infoSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/include"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="18dp"
        android:paddingTop="10dp"
        android:textColor="@color/me_color_text_light"
        android:textSize="13sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoSaldo" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnPilihBank"
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerview"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp" >

            <com.mhr.mobile.widget.imageview.RoundedImageView
                android:id="@+id/logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/atm"
                app:radius="8dp" />

            <TextView
                android:id="@+id/tvNamaBank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/logo"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/logo"
                android:text="Pengisian Saldo"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvNamaBank"
                android:layout_toEndOf="@id/logo"
                android:text="Pilih Metode Pembayaran"
                android:textColor="@color/me_color_text_light" />

            <TextView
                android:id="@+id/titleGanti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Ganti"
                android:textColor="@color/me_blue"
                android:textSize="13sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/infoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnPembayaran"
        android:layout_marginHorizontal="18dp"
        android:text="Swipe tombol ke kanan untuk melihat rincian pembayaran"
        android:textColor="@color/me_color_text_light"
        android:visibility="gone" />

    <com.mhr.mobile.widget.button.SwipeButton
        android:id="@+id/btnPembayaran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="18dp"
        android:layout_marginVertical="18dp"
        android:visibility="gone"
        app:button_background_drawable="@drawable/swipe_button_rect_bg"
        app:button_background_padding="14dp"
        app:button_background_src="@drawable/chevron_right_small"
        app:button_background_tint="@color/white"
        app:button_height="55dp"
        app:button_width="55dp"
        app:has_active_status="false"
        app:has_finish_animation="false"
        app:inner_text="Geser Untuk Bayar"
        app:inner_text_color="@color/white"
        app:inner_text_gravity="center"
        app:inner_text_padding="8dp"
        app:inner_text_size="16sp"
        app:outer_background_drawable="@drawable/swipe_rounded_rect_bg"
        app:outer_background_height="55dp"
        app:outer_background_tint="@color/white"
        app:trail_background_tint="@color/transparent"
        app:trail_enabled="true" />

</RelativeLayout>