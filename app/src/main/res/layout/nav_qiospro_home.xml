<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/me_background_back"
    android:orientation="vertical" >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/me_toolbar_back"
        android:fitsSystemWindows="true" >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/ToolbarTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedscroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:id="@+id/viewSlow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/fragment_dashboard"
                        android:name="com.mhr.mobile.ui.navcontent.home.HomeDashboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/viewFast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/viewSlow"
                    android:background="@drawable/qios_kategori_bg"
                    android:orientation="vertical" >

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/fragment_menu"
                        android:name="com.mhr.mobile.ui.navcontent.home.HomeKategori"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="5dp"
                        android:nestedScrollingEnabled="false" />

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/fragment_flashsale"
                        android:name="com.mhr.mobile.ui.navcontent.home.HomeFlashsale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="5dp"
                        android:nestedScrollingEnabled="false" />

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/fragment_marketplace"
                        android:name="com.mhr.mobile.ui.navcontent.home.HomeMarketplace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/me_background_front"
                        android:paddingBottom="18dp" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>