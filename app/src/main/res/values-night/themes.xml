<resources 
	xmlns:tools="http://schemas.android.com/tools">

    <style name="MyTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">#ffffff</item>
        <item name="colorOnPrimary">@color/me_primary</item>
        <item name="colorSecondary">@color/me_primary</item>
        <item name="android:colorBackground">@color/me_background</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:navigationBarColor">@color/me_background_front</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:textColor">#ffffff</item>
		<item name="fontFamily">@font/exo2_medium</item>
    </style>

</resources>
